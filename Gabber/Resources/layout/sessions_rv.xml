<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sessions_rv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="24dp"
    android:keepScreenOn="true">
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/session_participants"
                    android:text=""
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_width="0dp"
                    android:layout_weight=".75"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
                <TextView
                    android:id="@+id/session_date_created"
                    android:gravity="right"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
                <TextView
                    android:id="@+id/session_length"
                    android:gravity="right"
                    android:text=""
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#6DCBCA" />
            <LinearLayout
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/project_title"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
                <TextView
                    android:id="@+id/session_num_topics"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"
                    android:maxLines="1" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/session_uploaded"
                    android:background="@drawable/custom_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <ProgressBar
                    android:id="@+id/upload_progress"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="6dp"
                    android:visibility="gone"
                    style="@android:style/Widget.ProgressBar.Small" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>